{% comment %}
*
*   This include prints a list of categories.
*
*   Example: {% include categories values=post.categories %}
*
{% endcomment %}

{% assign categories = include.values %}

{% for category in categories %}
<a href="{{ site.baseurl }}/blog/category/{{ category | slugify }}">{{ category | capitalize }}</a>
{% unless forloop.last %}, {% endunless %}
{% endfor %}
